<style>
    .curiositiesSection {
        background:
            linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
            url("/dinos-curiosidades.jpg") no-repeat center center / cover;
        padding: 2rem 0;
    }

    .curiosities {
        padding: 2rem;
        max-width: 800px;
        margin: 0 auto;
        color: var(--black);
        background-color: var(--light-black);
        border-radius: 1rem;
        position: relative;
        z-index: 2;
    }

    .curiosities__title {
        font-size: 2.5rem;
        font-style: var(--primary-font);
        margin-bottom: 1rem;
        color: var(--primary-color);
    }

    #searchInput {
        width: 100%;
        padding: 0.8rem;
        margin-bottom: 1.5rem;
        font-size: 1rem;
        border-radius: 0.5rem;
        border: 1px solid var(--dark-grey);
        
    }

    .curiosities__list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 1.5rem;
        position: relative;
        z-index: 2;
        
    }

    .curiosities__list ul {
        list-style: none;
        padding-left: 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        
    }

    .curiosity__item {
        position: relative;
        padding: 1rem 1.2rem 1rem 3.5rem;
        background-color: var(--light-grey);
        border-radius: 0.75rem;
        color: var(--black);
        font-size: 1.1rem;
        line-height: 1.6;
        box-shadow: 0 2px 6px rgba(253, 253, 253, 0.689);
        transition:
            background-color 0.3s ease,
            transform 0.2s ease;
    }

    .curiosity__item::before {
        content: "";
        position: absolute;
        left: 1rem;
        top: 1rem;
        width: 2rem;
        height: 2rem;
        background-image: url("/pensar.png");
        background-size: contain;
        background-repeat: no-repeat;
    }

    .curiosity__item:hover {
        background-color: var(--primary-hover);
        color: var(--white);
        transform: translateY(-2px);
    }

    .curiosities__footer {
        margin-top: 3rem;
        padding: 2rem;
        border-top: 2px solid var(--primary-color);
        background-color: var(--primary-color-glow);
        text-align: center;
        border-radius: 1rem;
        color: var(--black);
    }

    .footer__title {
        font-size: 1.5rem;
        color: var(--light-black);
        margin-bottom: 0.5rem;
    }

    .footer__desc {
        color: var(--black);
        font-size: 1rem;
        margin-bottom: 1rem;
    }

