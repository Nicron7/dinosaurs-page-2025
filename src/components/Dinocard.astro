---
const  { dino } = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>("/images/.{jpeg,jpg,png,gif,svg}");
const imageDefault = "/images/default.jpg"
let color = "card-red"
const { nombre, tipo, periodo, longitud_aproximada, peso_aproximado, descripcion, imagen_url } = dino


if (periodo.includes("Jurásico")) {
    color = "card-orange"
} else if (periodo.includes("Cretácico")) {
    color = "card-green"
}
---



<div class={color + " card"}>
    <div class="card__img__cont">
        <img src={images[imagen_url] ? imagen_url : imageDefault} alt="" class="card__img">
    </div>
    <div class="card__text">
        <h3 class="card__title">{nombre}</h3>
        <p class="card__type"><span>Dieta:</span> {tipo}</p>
        <p class="card__weight"><span>Peso:</span> {peso_aproximado}</p>
        <p class="card__age"><span>Período:</span> {periodo}</p>
        <p class="card__length"><span>Tamaño:</span> {longitud_aproximada}</p>
        <div class="card__desc__cont">
            <p class="card__subtitle">Descripción<i class="fa-solid fa-chevron-right"></i></p>
            <p class="card__desc">{descripcion}</p>
        </div>
    </div>
</div>

<style>
    .card {
        background-color: var(--primary-hover);
        border-radius: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: top;
        max-width: 400px;
    }
    .card-red {
        background-color: var(--secondary-hover);
        .card__type, .card__weight, .card__age, .card__length  {
            background-color: var(--secondary-color);
            padding: .3rem .8rem;
        }
    }
    .card-orange {
        background-color: var(--primary-hover);
        .card__type, .card__weight, .card__age, .card__length {
            background-color: var(--primary-color);
            padding: .3rem .8rem;
        }
    }
    .card-green {
        background-color: var(--dark-green);
        .card__type, .card__weight, .card__age, .card__length {
            background-color: var(--green);
            padding: .3rem .8rem;
        }
        .card__desc {
            background-color: ;
        }
    }
    .card__type, .card__weight, .card__age, .card__length {
        background-color: var(--secondary-color);
        padding: .3rem .8rem;
    }
    .card__subtitle {
        display: flex;
        gap: .5rem;
        align-items: center;
        margin-bottom: .5rem;
        cursor: pointer;
        i {
            transition: all .3s ease-in-out;
        }
    }
    .card__desc__cont {
        overflow: hidden;
        margin-top: 1rem;
    }
    .card__desc {
        height: 0;
        transition: height .3s ease-in-out;
    }
    .card__desc--active {
        height: auto;
    }
    .card__subtitle--active {
        i {
            transform: rotate(90deg);
        }
    }
    .card__text {
        padding: 1.5rem;
        padding-top: 1rem;
        color: var(--white);
        display: flex;
        flex-direction: column;
        gap: .5rem;
        span {
            font-weight: 600;
        }
    }
    .card__title {
        font-size: 1.8rem;
        font-weight: 500;        
    }
    .card__img__cont {
        overflow: hidden;
        max-height: 250px;
        width: 100%;
    }

    .card__img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 1rem 1rem 0 0;
    }
</style>

<script>
    const subtitles = document.querySelectorAll(".card__subtitle")
    const descs = document.querySelectorAll(".card__desc")

    subtitles.forEach((subtitle, index) => {
        subtitle.addEventListener("click", () => {
            descs[index].classList.toggle("card__desc--active")
            subtitles[index].classList.toggle("card__subtitle--active")
        })
    })

</script>
